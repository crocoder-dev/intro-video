{{define "cta"}}
.iv-cta-button {
  display: inline-flex;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  padding-left: 1rem;
  padding-right: 1rem;
  transition-property: background-color, border-color, color, fill, stroke;
  font-size: 0.875rem;
  line-height: 1.25rem;
  font-weight: 500;
  white-space: nowrap;
  justify-content: center;
  align-items: center;
  height: 2.5rem;
  border-radius: 0.375rem;
  position: absolute;
  bottom: 2rem;
  background-color: #000;
  color: #FFF;
  left: 70px;
  width: 130px;
}
