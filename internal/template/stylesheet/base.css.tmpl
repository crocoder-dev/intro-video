.iv-card {
  animation: bounce-fade .4s;
  position: fixed;
  z-index: 10;
  right: 16px;
  bottom: 16px;
  box-sizing: border-box;
  transition: all .25s ease-in-out;
  border-radius: 16px;
  background: #fff;
  box-shadow: 0 20px 48px rgba(0, 0, 0, .1);
  cursor: pointer;
}

.iv-bubble {
  position: absolute;
  top: 30px;
  left: -40px;
  width: auto;
  min-width: 60px;
  padding: 8px;
  background: #fff;
  border: 2px solid #007BFF;
  border-radius: 10px;
  border-bottom-right-radius: 2px;
  text-align: center;
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, .2);
}

.iv-close-button {
  position: absolute;
  top: -16px;
  right: -16px;
  background: rgba(0, 0, 0, 1);
  color: white;
  border: none;
  border-radius: 50%;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 42px;
  cursor: pointer;
  padding-bottom: 2px;
}

.iv-player {
  display: none;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  border-radius: 8px;
  object-fit: cover;
}

.iv-player-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
  border-radius: 8px;
}

.iv-progressbar {
  width: 100%;
  height: 8px;
  position: absolute;
  bottom: 0;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
  overflow: hidden;
}

.iv-progressbar::-webkit-progress-bar {
  background-color: transparent;
  border-bottom-right-radius: 8px;
  border-bottom-left-radius: 8px;
}

.iv-progressbar::-webkit-progress-value {
  background-color: #007BFF;
}

.iv-progressbar::-moz-progress-bar {
  background-color: transparent;
  border-bottom-right-radius: 8px;
  border-bottom-left-radius: 8px;
}

.iv-progressbar::-moz-progress-value {
  background-color: #007BFF;
}

@keyframes bounce-fade {
  0% {
    transform: scale(0.5);
    opacity: 0;
  }

  50% {
    transform: scale(1.2);
  }

  100% {
    transform: scale(1);
    opacity: 1;
  }
}
