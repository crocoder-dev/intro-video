{{define "cta"}}

.iv-cta-button {
  position: absolute;
  bottom: 20px;
  color: hsl(var(--accent-foreground));
  display: inline-flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  border-radius: 0.375rem;
  font-size: 0.875rem;
  font-weight: 500;
  transition: color 0.2s, background-color 0.2s;
  outline: none;
  border: 1px solid hsl(var(--input));
  background-color: hsl(var(--background));
  padding: 0.5rem 1rem;
  height: 2.5rem;
}

.iv-cta-button:hover {
  background-color: hsl(var(--accent));

}

.iv-cta-button:focus-visible {
  ring-color: hsl(var(--ring));
  ring-offset: 0.125rem; /* or 2px */
  ring-width: 0.125rem; /* or 2px */
}

{{end}}
