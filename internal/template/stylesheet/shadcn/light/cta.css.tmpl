{{define "cta"}}
.iv-cta-button {
    min-width: 130px;
    justify-content: center;
    align-items: center;
    transition-property: background-color, border-color, color, fill, stroke;
    position: absolute;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
    padding-left: 1rem;
    padding-right: 1rem;
    font-size: 0.875rem;
    line-height: 1.25rem;
    font-weight: 500;
    height: 2.5rem;
    border-radius: 0.375rem;
    bottom: 2rem;
    background-color: var(--primary);
    color: var(--primary-foreground);
    display: inline-flex;
    white-space: nowrap;
    transition: background-color 0.3s;
    outline: none;
    border: 0px;
}

.iv-cta-button:hover {
    background-color: var(--primary-hover);
}

{{end}}
