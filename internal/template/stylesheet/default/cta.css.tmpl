{{define "cta"}}
.iv-cta-button {
  min-width: 130px;
  display: inline-flex;
  white-space: nowrap;
  justify-content: center;
  align-items: center;
  transition-property: background-color, border-color, color, fill, stroke;
  position: absolute;

  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
  padding-left: 1rem;
  padding-right: 1rem;
  font-size: 0.875rem;
  line-height: 1.25rem;
  font-weight: 500;
  height: 2.5rem;
  border-radius: 0.375rem;
  bottom: 2rem;
  background-color: #000;
  color: #FFF;
}
{{end}}
